{
  "name": "twenty-twenty-twenty",
  "version": "1.1.0",
  "description": "A timer for eye care reminders.",
  "main": "index.js",
  "build": {
    "appId": "net.spilum.twenty-twenty-twenty",
    "productName": "Twenty-Twenty-Twenty",
    "files": [
      "index.js",
      "renderer.js",
      "public/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "icon": "public/icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "public/icon.png",
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "tristanpn02",
        "repo": "Twenty-Twenty-Twenty"
      }
    ]
  },
  "scripts": {
    "start": "electron .",
    "debug": "electron . --trace-warnings",
    "build": "electron-builder",
    "dist": "electron-builder --mac --win --linux"
  },
  "author": "Tristan Andersen",
  "license": "ISC",
  "dependencies": {
    "electron-settings": "^4.0.3",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  }
}
